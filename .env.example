# DotDashDash Environment Variables
# Copy this file to .env and customize as needed

# Development settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# Build settings
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=DotDashDash

# Tauri settings (these are handled by tauri.conf.json)
# TAURI_BUNDLE_IDENTIFIER=com.dotdashdash.app
# TAURI_PRODUCT_NAME=DotDashDash

# Feature flags
VITE_ENABLE_TRAY=true
VITE_ENABLE_PAUSE_TOGGLE=true
VITE_ENABLE_CONFLICT_DETECTION=true

# Debug settings
VITE_DEBUG_EXPANSION_ENGINE=false
VITE_DEBUG_TRAY_EVENTS=false
VITE_DEBUG_PAUSE_EVENTS=false