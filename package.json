{
  "name": "app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:style": "VITE_SKIP_ONBOARDING=true vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "tauri": "tauri",
    "build:mac": "tauri build -b dmg",
    "checksum:mac": "cd src-tauri/target/release/bundle/macos && shasum -a 256 DotDash.dmg > DotDash-$(node -p \"require('../../../../../package.json').version\").sha256",
    "notarize:mac": "bash ./build-scripts/notarize-mac.sh",
    "staple:mac": "bash ./build-scripts/staple-mac.sh",
    "sign:verify": "bash ./build-scripts/verify-signing.sh",
    "release:mac": "npm run build:mac && npm run notarize:mac && npm run staple:mac && npm run sign:verify && npm run checksum:mac"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-fs": "^2.4.1",
    "@tauri-apps/plugin-opener": "^2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^2.1.8"
  }
}
